//CLASS 
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class SignUpPage extends AppCompatActivity {

    private Button save;
    private Button cancel;
    private EditText name;
    private EditText mail;
    private EditText password;
    private EditText secQuestion;
    private EditText secAnswer;


    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_sign_up_page);

        save = (Button) findViewById(R.id.bSave);
        cancel = (Button) findViewById(R.id.bCancel);
        name = (EditText) findViewById(R.id.etName);
        mail = (EditText) findViewById(R.id.etMail);
        password = (EditText) findViewById(R.id.etPassword);
        secQuestion = (EditText) findViewById(R.id.etSQ);
        secAnswer = (EditText) findViewById(R.id.etAnswerSQ);

        save.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                //first time can change everything
                name.setText( name.getText() );
                secQuestion.setText( secQuestion.getText() );
                secAnswer.setText( secAnswer.getText() );

                //mail cannot be changed
                // password can only be changed after coming from forget password
            }
        });
    }
}
